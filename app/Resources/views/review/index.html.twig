{# app/Resources/views/default/index.html.twig #}

{% extends 'base.html.twig' %}

{% block body %}
    <h1>List</h1>

    <table>
        <tbody>
        <tr>
            <th>Review Number (id)</th>
            <td>{{ review.id }}</td>
        </tr>
        <tr>
            <th>Text</th>
            <td>{{ review.text }}</td>
        </tr>
        <tr>
            <th>Publication's date</th>
            <td>{{ review.publicationDate }}</td>
        </tr>
        <tr>
            <th>Note</th>
            <td>{{ review.note }}</td>
        </tr>
        </tbody>
    </table>
    <ul>
        <li>
            <a href="/">Return to homepage</a>
        </li>
    </ul>

{% endblock %}